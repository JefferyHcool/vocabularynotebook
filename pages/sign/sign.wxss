/* pages/sign/sign.wxss */
.sign{
        min-height: 100vh;
        background-color: #fff;
}
.form{
        background-color: #ffffff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-bottom: 20rpx;
}

.avatar{
        position: relative;        
        /* background-color: rgb(233, 233, 233); */
        width: 150rpx;
        height: 150rpx;
        overflow: hidden;
        border-radius: 50%;
        /* background-color: blanchedalmond; */
}
button image{
        width: 100%;
        height: 110%;
        
}
.avatar view{
        width: 150rpx;
        height: 60rpx;
        text-align: center;
        position: absolute;
        z-index: 1;
        bottom: 17rpx;
        left: 50rpx;
        background-color: rgba(255, 255, 255, 0.349);
        /* padding: 15rpx; */

}
.avatar text{
        color: #383838;
        font-size: 18rpx;

}
.avatar button{
        position: absolute;
        /* background-color: rgb(139, 0, 0); */
        width: 250rpx;
        height: 180rpx;
        left:-50rpx;
        top: -18rpx;
}
.option{
        margin-top: 400rpx;
        background-color: #fff;
        /* height: 800rpx; */
}
.option button{
        margin-top: 40rpx;
}
