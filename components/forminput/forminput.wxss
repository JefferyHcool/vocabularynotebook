/* components/form_input/forminput.wxss */

.common{
        /* width: 800rpx; */
        display: flex;
        background-color: rgb(255, 255, 255);
        min-height: 100rpx;
        padding: 1rpx 30rpx;
        align-items: center;
        justify-content: space-between;
       
        



}
.border-top{
        border-top: 1rpx solid #eee;
}
.border-bottom{
        border-bottom: 1rpx solid #eee;
}
.title{
        width: 22%;
        text-align: justify;
	padding-right: 30rpx;
	font-size: 30rpx;
	position: relative;
	height: 60rpx;
	line-height: 60rpx;
}
.common input{
        flex: 1;
	font-size: 30rpx;
	color: #555;
	padding-right: 20rpx;
}
input{    
        cursor: auto;
        display: block;
        height: 1.4rem;
        text-overflow: clip;
        overflow: hidden;
        white-space: nowrap;
        /* font-family: UICTFontTextStyleBody; */
        min-height: 1.4rem;
        box-sizing: border-box
}