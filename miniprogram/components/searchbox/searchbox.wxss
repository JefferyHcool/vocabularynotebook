/* components/searchbox/searchbox.wxss */
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.box{   
        margin-top: 20rpx;
        width: 100%;
        height: 90rpx;
        /* background-color: rgb(60, 184, 184); */
        display: flex;
        justify-content: center;
        align-items: center;

}
.box .search{
        background-color: rgb(255, 255, 255);
        width: 80%;
        height: 100%;
        border-radius: 20px;
        box-shadow:  0px 1px 2px 0.1px rgba(0,0,0,0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;

}
.search input{
        height: 80%;
        width: 80%;
        /* background-color: blue; */
        margin-left: 40rpx;
        font-size: 20px;
}
.search .size{
        width: 18%;
        font-size: 50rpx;
        
}